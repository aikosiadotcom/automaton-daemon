{
  "name": "@aikosia/automaton-daemon",
  "version": "1.0.0",
  "description": "a daemon which manage browser automaton in server",
  "main": "./src/lib/index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/aikosiadotcom/automaton-daemon"
  },
  "engines": {
    "npm": ">=8.19.2",
    "node": ">=18.12.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./src/index.js",
    "types": "del-cli src/**/*.ts -f && tsc",
    "docs": "cross-env NODE_ENV=production ./node_modules/.bin/jsdoc -c jsdoc.json -p",
    "release": "npm run types && npm run docs && git add * && git-cz && git pull origin && git push origin",
    "test": "cross-env NODE_ENV=development NODE_OPTIONS='--experimental-vm-modules' jest"
  },
  "keywords": [
    "aikosia",
    "automaton",
    "automation",
    "bot",
    "puppeteer",
    "playwright",
    "chromium",
    "framework",
    "daemon",
    "server",
    "browser"
  ],
  "files": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "!src/**/*.test.js",
    "!src/mocks/**/*"
  ],
  "author": "firman",
  "license": "MIT",
  "imports": {
    "#src/*": "./src/*.js",
    "#lib/*": "./src/lib/*.js",
    "#mock": "./src/mocks",
    "#mock/*": "./src/mocks/*.js",
    "#route/*": "./src/routes/*.js"
  },
  "exports": "./src/lib/index.js",
  "dependencies": {
    "@aikosia/automaton-core": "^1.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "extend": "^3.0.2",
    "fs-extra": "^11.1.1",
    "http-proxy": "^1.18.1",
    "import-meta-resolve": "^3.0.0",
    "jsonfile": "^6.1.0",
    "node-directories": "^3.0.0",
    "playwright": "^1.33.0",
    "playwright-extra": "^4.3.6",
    "portfinder": "^1.0.32",
    "public-ip": "^6.0.1",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "read-pkg": "^8.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^10.0.3",
    "@semantic-release/release-notes-generator": "^11.0.1",
    "better-docs": "^2.7.2",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "jest": "^29.5.0",
    "jest-html-reporters": "^3.1.4",
    "jsdoc": "^4.0.2",
    "jsdoc-mermaid": "^1.0.0",
    "jsdoc-plugin-intersection": "^1.0.4",
    "node-jest-badges": "^1.3.12",
    "semantic-release": "^21.0.2",
    "taffydb": "^2.7.3",
    "typescript": "^5.0.4"
  }
}
