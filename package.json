{
  "name": "@aikosia/automaton-daemon",
  "version": "0.9.0",
  "description": "a daemon who manage browser automaton in server",
  "main": "./src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/aikosiadotcom/automaton-daemon"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./src/index.js",
    "start:dev": "cross-env NODE_ENV=development node ./src/index.js",
    "release": "node ./script/release.js",
    "fix-release": "np --no-2fa",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test-ci": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest --ci --coverage"
  },
  "keywords": [
    "aikosia",
    "automaton",
    "automation",
    "bot",
    "puppeteer",
    "playwright",
    "chromium",
    "framework",
    "daemon",
    "server"
  ],
  "type": "module",
  "files": [
    "src"
  ],
  "author": "firman",
  "license": "MIT",
  "dependencies": {
    "@aikosia/automaton": "^0.7.0",
    "dotenv": "^16.0.3",
    "env-paths": "^3.0.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "http-proxy": "^1.18.1",
    "jsonfile": "^6.1.0",
    "node-directories": "^3.0.0",
    "playwright": "^1.32.3",
    "portfinder": "^1.0.32",
    "public-ip": "^6.0.1",
    "read-pkg": "^8.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "node-jest-badges": "^1.3.12",
    "np": "^7.7.0"
  },
  "exports": {
    "import": "./src/lib/index.js"
  },
  "jest": {
    "transform": {},
    "collectCoverage": true,
    "coverageReporters": [
      "json-summary"
    ]
  }
}
